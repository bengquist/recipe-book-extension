{
  "manifest_version": 3,
  "name": "Recipe Book Reader",
  "description": "Save your favorite recipes to Recipe Book!",
  "version": "1.0.0",
  "icons": {
    "128": "icon.png"
  },
  "permissions": ["tabs"],
  "host_permissions": ["http://*/", "https://*/"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+D",
        "mac": "Command+D"
      }
    }
  },
  "action": {
    "default_title": "Recipe Book Reader",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
